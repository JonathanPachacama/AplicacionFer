<div class="row" >
  <!--<div class="col-md-1"></div>-->
  <div class="col-12">
    <div id="resultAlgorithm">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-md-9">
              <h3 class="card-title float-sm-left" >
                <i class="ion ion-document"></i>
                TÍTULOS
              </h3>
            </div>
            <div class="col-md-3">
              <div class="card-tools">
                <div class="input-group input-group-sm">
                  <label for="">Mostrar:</label>
                  <select class="form-control" ng-model="viewby" ng-change="setItemsPerPage(viewby)">
                    <option selected="selected" value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                  </select>
                  <label for="">artículos</label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
          <table class="table table-hover">
            <tbody>
            <tr ng-repeat="articleTitle in responseJsonLucene.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage))">

              <th scope="row">{{$index+1}}</th>
              <td>
                {{articleTitle.tituloArticulo}}
              </td>
              <td>
                <button id="btn{{$index}}" type="button" value="{{articleTitle.tituloArticulo}}" class="btn btn-outline-danger btn-block" data-toggle="modal" data-target="#metadataACM" onclick="web(this)">Metadatos</button>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
          <ul uib-pagination
              total-items="totalItems"
              ng-model="currentPage"
              ng-change="pageChanged()"
              num-pages="smallnumPages"
              max-size="maxSize"
              class="pagination-sm float-sm-right"
              boundary-links="true"
              items-per-page="itemsPerPage"
              force-ellipses="true">
          </ul>
        </div>
      </div>
      <!-- /.card -->
    </div>
  </div>
  <!--<div class="col-md-1"></div>-->
</div>










