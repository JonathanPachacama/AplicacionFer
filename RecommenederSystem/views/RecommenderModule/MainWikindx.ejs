    <!--</ol>-->
  </section>
  <!-- Main content -->
  <section class="content container-fluid">
    <!-- /-------------------------------------------------------------------------------------------------------------/ -->
    <!--------------------------
    | Your Page Content Here |
    -------------------------->

    <div ng-controller="mainWikindxController">


      <div class="row">
        <div class="col-lg-12">
          <div class="box">
            <div class="box-header with-border">

              <!--<input style="width:88%" placeholder="Ingrese un parametro de busqueda" id="busqueda" name="busqueda"  class="form-control"> <button  ng-click='buscarArticulo()' class="btn btn-primary" type="submit"><i class="fa fa-fw fa-search"></i> Buscar</button>-->
              <!--&lt;!&ndash;<a href="<?=base_url()."enterprises/enterprises" ?>" class="btn btn-primary"> Limpiar </a>&ndash;&gt;-->

              <form class="form-inline reset-margin">
              <input style="width:88%" placeholder="Ingrese un parametro de busqueda" id ="busqueda" name="busqueda" class="form-control" ng-model="busqueda"> <button ng-click="buscarArticulo()" class="btn btn-primary"><i class="fa fa-fw fa-search"></i> Buscar</button>

              <!--<a href="<?=base_url()."clients/clients" ?>" class="btn btn-primary"> Limpiar </a>-->

              </form>


            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <br />
              <table class="table table-striped table-bordered table-hover" ng-init='configPages()'>
                <thead>
                <tr>

                  <th>#</th>
                  <th>Titulo</th>
                  <th></th>
                </tr>

                </thead>
                <tbody>

                <tr ng-repeat='article in articles | startFromGrid: currentPage * pageSize | limitTo: pageSize' >

                  <td>{{$index+1}}</td>
                  <td>{{article.resourceTitle}}</td>
                  <td>
                    <a hidden class="btn btn-default btn-xs" href="<%= MasterUrlService.base_wikindx()%>index.php?action=resource_RESOURCEFORM_CORE&type=edit&id={{article.resourceId }}" target="_blank">
                      <i class="fa fa-fw fa-edit"></i>
                    </a>
                    <a hidden class="btn btn-default btn-xs" href="<%= MasterUrlService.base_wikindx()%>index.php?action=resource_RESOURCEVIEW_CORE&id={{article.resourceId }}" target="_blank">
                      <i class="fa fa-fw fa-list-alt"></i>
                    </a>

                    <a href="/RecommenderModule/RecommenderWkx/bringParametersCreator?resourceId={{article.resourceId }}">
                      <button type="button"  ng-click='irRecomendacion' class="btn btn-primary btn-xs"><i class="fa fa-fw fa-list-ul"></i></button>
                    </a>

                    <a href="<%= MasterUrlService.base_wikindx()%>index.php?action=admin_DELETERESOURCE_CORE&function=deleteResourceConfirm&navigate=list&resource_id={{article.resourceId}}" target="_blank">
                      <button hidden class="btn btn-danger btn-xs" type="button" onclick="">
                        <i class="fa fa-fw fa-remove"></i>
                      </button>
                    </a>


                  </td>


                </tr>

                </tbody>
              </table>

              <div class='btn-group'>
                <button type='button' class='btn btn-default' ng-disabled='currentPage == 0' ng-click='currentPage = currentPage - 1'>&laquo;</button>
                <button type='button' class='btn btn-default' ng-disabled='currentPage == page.no - 1' ng-click='setPage(page.no)' ng-repeat='page in pages'>{{page.no}}</button>
                <button type='button' class='btn btn-default' ng-disabled='currentPage >= articles.length/pageSize - 1' , ng-click='currentPage = currentPage + 1'>&raquo;</button>
              </div>
            </div>

          </div>
        </div>
        <!-- /.col-lg-12 -->
      </div>
    </div>
    <!-- /.row -->
    <!-- /-------------------------------------------------------------------------------------------------------------/ -->
  </section>
  <!-- /.content -->
</div>
