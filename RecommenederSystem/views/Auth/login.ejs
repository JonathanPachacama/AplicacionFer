<%display = ((msj.length) > 0)?"block":"none"%>

<div class="login-box">
  <div class="login-logo">
    <a href="<%= MasterUrlService.base_url()%>"><img src="<%= MasterUrlService.base_url()%>images/logoenp.png"></a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sistema de Recomendación</p>
      <form action="" method="post" id="sign-up-form" class="form-signin">
        <div class="alert-danger animated text-center" role="alert" style="display:<%=display%>;background-color: #fff;">
          <%=  msj %>
        </div>
        <br>
        <div class="form-group has-feedback">
          <i class="fa fa-user form-control-feedback" style="position: absolute;padding: 10px;margin-left: 5px;height: 40px;display: flex;align-items: center;"></i>
          <input type="text" class="form-control" placeholder="Usuario" name="username" autofocus  style="padding-left: 30px!important;">
        </div>
        <div class="form-group has-feedback">
          <span class="fa fa-lock form-control-feedback" style="position: absolute;padding: 10px;margin-left: 5px;height: 40px;display: flex;align-items: center;"></span>
          <input type="password" class="form-control" placeholder="Contraseña" name="password" autofocus  style="padding-left: 30px!important;">
        </div>

        <div class="row">
          <div class="col-8">
            <!--<div class="checkbox icheck">-->
              <!--<label>-->
                <!--<input type="checkbox"> Remember Me-->
              <!--</label>-->
            <!--</div>-->
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <!--<p class="mb-1">-->
        <!--<a href="#">I forgot my password</a>-->
      <!--</p>-->
      <p class="mb-0">
        <a href="<%= MasterUrlService.base_url()%>Auth" class="text-center">No tengo una cuenta</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>

</div>
<!-- /.login-box -->




