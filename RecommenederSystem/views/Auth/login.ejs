<div class="login-box">
  <div class="login-logo">
    <a href="<%= sails.config.myconf.base_url %>"><img src="<%= sails.config.myconf.base_url %>images/logoenp.png"></a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sistema de Recomendación</p>

    <form action="" method="post">
      <div class="alert-danger animated text-center" role="alert" style="background-color: #fff;">

      </div>
      <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Usuario" name="username" autofocus required>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Contraseña" name="password" autofocus required>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <!--<div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember Me
            </label>
          </div>-->
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">entrar</button>
        </div>
        <!-- /.col -->
      </div>
    </form>


    <a href="<%= sails.config.myconf.base_url %>Auth" class="text-center">No tengo una cuenta</a>

  </div>
  <!-- /.login-box-body -->
</div>
